{% extends 'base.html.twig' %}

{% block title %}Conducteur{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center">{{ conducteur.nom }}, {{ conducteur.prenom}}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-6 offset-3">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ conducteur.id }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ conducteur.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ conducteur.nom }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ conducteur.description }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ conducteur.email }}</td>
                    </tr>
                    <tr>
                        <th>Age</th>
                        <td>{{ conducteur.age }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt</th>
                        <td>{{ conducteur.createdAt ? conducteur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <a class="btn btn-info" href="{{ path('conducteur_index') }}">back to list</a>
            <div class="d-block my-2">
                <a class="btn btn-success" href="{{ path('conducteur_edit', {'id': conducteur.id}) }}">edit</a>
            </div>

            {{ include('conducteur/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
